  <script>
    // ---- Config ----
    const WHATSAPP_NUMBER_RAW = "9762881995"; // Provide full international format for best results (e.g., +977XXXXXXXXXX)
    const WA_URL = `https://wa.me/${WHATSAPP_NUMBER_RAW.replace(/[^\d+]/g,'')}`;
    document.getElementById('waLink').href = WA_URL;

    // ---- Quick Quote Calculator ----
    function calcQuote(){
      const type = document.getElementById('qq-type').value;
      const level = +document.getElementById('qq-level').value;
      const weeks = Math.max(1, +document.getElementById('qq-time').value || 4);
      const baseMap = {"Website":900, "Mobile App":1600, "Web App / SaaS":2200, "UI/UX Design Only":700};
      const base = baseMap[type] || 1000;
      const complexityMultiplier = 0.9 + level * 0.6; // 1.5, 2.1, 2.7
      const rush = weeks < 4 ? 1.25 : 1.0;
      const price = Math.round(base * complexityMultiplier * rush / 10) * 10;
      document.getElementById('qq-price').textContent = `$${price.toLocaleString()}`;
    }
    calcQuote();

    // ---- Order Form (demo) ----
    function saveDraft(){
      const data = Object.fromEntries(new FormData(document.getElementById('orderForm')).entries());
      localStorage.setItem('orderDraft', JSON.stringify(data));
      alert('Draft saved locally on this device.');
    }
    function submitOrder(e){
      e.preventDefault();
      const form = document.getElementById('orderForm');
      const data = Object.fromEntries(new FormData(form).entries());
      // TODO: Replace this with a real backend request (fetch to your API / email service)
      console.log('ORDER_SUBMITTED', data);
      alert('Thank you! Your order has been recorded (demo). We will contact you shortly.');
      form.reset();
    }

    // ---- Deposit (demo) ----
    function fakePay(){
      const method = document.getElementById('pay-method').value;
      const amount = +document.getElementById('pay-amount').value || 0;
      alert(`Demo: Initiating ${method} deposit of $${amount}.\nIntegrate your gateway in fakePay().`);
    }
    function uploadProof(){
      const file = document.getElementById('pay-proof').files[0];
      if(!file){alert('Please choose a file first.');return}
      alert('Demo: Proof uploaded. In production, send to your server or cloud storage.');
    }

